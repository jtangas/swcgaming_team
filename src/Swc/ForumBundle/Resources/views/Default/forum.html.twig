{% extends '::base.html.twig' %}

{% block body %}
    {% if forum is null %}
        <div style="color: #C00; font-weight: bold;">NOT FOUND</div>
    {% else %}
        <div style="width:100%; background: #F5F5F5; color: #333;">
            {{ forum.getName() }}
        </div>
        {% for topic in forum.getTopics() %}
            <div style="width:100%; background: #333; color: #F5F5F5;">
                <a href="{{ path('swc_forum_topic', {'forum': topic.getForum().getCleanName(), 'topic': topic.getCleanName()}) }}">{{ topic.getName() }}</a>
            </div>
        {% endfor %}
    {% endif %}
{% endblock %}